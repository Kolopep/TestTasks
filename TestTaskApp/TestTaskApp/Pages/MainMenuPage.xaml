      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestTaskApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenuPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="BCheckWeater" Content="Check Weather (Task 1)" Margin="5" Height="30" Width="200" Click="BCheckWeater_Click"/>
            <Button x:Name="BSQLRequest" Content="SQL Requests (Task 2)" Margin="5" Height="30" Width="200" Click="BSQLRequest_Click"/>
        </StackPanel>
    </Grid>
</Page>
